<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.1//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">
 
<suppressions>
    <!-- Suppress Javadoc requirements for unit and integration tests -->
    <suppress checks="JavadocType" files="src[/\\](test|it)[/\\].+"/>
    <suppress checks="JavadocMethod" files="src[/\\](test|it)[/\\].+"/>
    <suppress checks="JavadocPackage" files="src[/\\](test|it)[/\\].+"/>

    <!-- Constructor not required in unit and integration tests -->
    <suppress checks="MissingCtor" files="src[/\\](test|it)[/\\].+"/>

    <!-- Suppress magic number checks in unit and integration tests -->
    <suppress checks="MagicNumber" files="src[/\\](test|it)[/\\].+"/>

    <!-- Suppress method length check in unit and integration tests -->
    <suppress checks="MethodLength" files="src[/\\](test|it)[/\\].+"/>
    
    <!-- Suppress Clover instrumented code -->
    <suppress checks="." files="target/clover/.+"/>

    <!-- Suppress generated-sources -->
    <suppress checks="." files="target[/\\]generated-sources[/\\].+"/>
    <suppress checks="." files="target[/\\]generated-test-sources[/\\].+"/>


</suppressions>
